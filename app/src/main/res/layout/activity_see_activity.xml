<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/tan_background"
    android:layout_height="match_parent"
    tools:context="com.example.wolverine.tourapp.see_activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/Imagedes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/karnak" />

        <TextView
            android:id="@+id/ImageName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Imagedes"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Monument Name"
            android:textColor="@color/TitleText"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/descripe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ImageName"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="Monument Description"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/descripe"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="Bulder Name: "
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/builder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="sfafafadfdsagsf"
                android:textSize="18sp"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>
    </RelativeLayout>

</ScrollView>
